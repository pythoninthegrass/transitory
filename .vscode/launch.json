{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387

    // pytest: https://stackoverflow.com/questions/70259564/how-to-debug-the-current-python-test-file-with-pytest-in-vs-code

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            // "args": ["-i", "response.xml", "-o", "response.csv"],
            // "args": ["-d", "/Volumes/Data"],
            // "args": ["-f", "menubar.dmg"],
            // "args": ["-h"],
            // "env": {
            //     "CREDS": "",
            // }
        },
        {
          "name": "Ruby: Current File",
          "type": "ruby_lsp",
          "request": "launch",
          "program": "${file}",
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Ansible Playbook",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/run.py",
            "args": [
                "tasks/git.yml",
                "-i",
                "${workspaceFolder}/hosts"
            ],
            "env": {
                // "ANSIBLE_VAULT_PASSWORD_FILE": "your_vault_password_file",
                "ANSIBLE_CONFIG": "${workspaceFolder}/ansible.cfg"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Node: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "runtimeExecutable": "${env:HOME}/.n/bin/node"
        }
    ]
}
